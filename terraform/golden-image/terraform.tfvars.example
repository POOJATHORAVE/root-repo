# Example Terraform Variables
# Copy this file to terraform.tfvars and update with your values

# AWS Region
aws_region = "eu-west-1"

# VPC Configuration
vpc_id            = "vpc-ss-prd-euw1-01"
private_subnet_id = "subnet-xxxxxxxxxxxxxxxxx"

# Target AWS Account IDs to share images with
target_account_ids = [
  "123456789012",  # Development Account
  "234567890123",  # Test Account
  "345678901234",  # Production Account
]

# Common Tags
common_tags = {
  CostCenter  = "IMS"
  Environment = "Production"
  Owner       = "Tesco-IMS"
  Project     = "Golden-Image"
  Application = "EC2-Image-Builder"
  Compliance  = "CIS-Level-1"
}
